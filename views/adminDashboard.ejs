<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/styles.css">
    <title>Dashboard</title>
</head>

<body>
    <div class="text-center center-div">
        <div class="container border rounded py-5 bg-light bg-opacity-50">

            <h2>DashBoard</h2>
            <div class="pb-2 text-end">
                <a class="btn btn-danger" href="/admin/logout">Logout</a>
            </div>
            <form class="input-group m-3 d-flex justify-content-end px-4" action="/admin/dashboard" method="get">
                <div class="form-outline">
                    <input type="search" id="form1" class="form-control" placeholder=" Search user..." name="search" />
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search">search</i>
                </button>
            </form>
            <table class="table">
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th></th>
                    <th> </th>
                </tr>
                <% users.forEach((user,i)=> { %>
                    <tr>
                        <td>
                            <%= i+1 %>
                        </td>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.phoneNum %>
                        </td>
                        <td>
                            <div>
                                <a class="btn btn-primary" href="/admin/edit/<%= user._id %>">Edit</a>
                            </div>
                        </td>
                        <td>
                            <div>
                                <a class="btn btn-danger" href="/admin/delete/<%= user._id %>">Delete</a>
                            </div>

                            </th>
                    </tr>
                    <% }) %>
            </table>

            <div>
                <a class="btn btn-primary" href="/admin/addUser">Add new user</a>
            </div>
        </div>
    </div>
</body>

</html>